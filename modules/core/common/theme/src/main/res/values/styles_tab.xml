<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TtiviTabText">
        <item name="android:textColor">@color/ttivi_tab_tint</item>
        <item name="android:layout_marginTop">?attr/ttivi_spacing_xxxs</item>
        <item name="android:layout_marginHorizontal">?attr/ttivi_spacing_xxs</item>
        <item name="android:layout_marginBottom">?attr/ttivi_spacing_m</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="ttiviTextSizeIdentifier">H5</item>
    </style>

    <style name="TtiviTabIcon">
        <item name="android:tint">@color/ttivi_tab_tint</item>
        <item name="android:layout_width">?attr/ttivi_icon_size_s</item>
        <item name="android:layout_height">?attr/ttivi_icon_size_s</item>
        <item name="android:layout_marginTop">?attr/ttivi_spacing_m</item>
    </style>

    <style name="TtiviTabTextOnly">
        <item name="android:textColor">@color/ttivi_tab_tint</item>
        <item name="android:layout_marginHorizontal">?attr/ttivi_spacing_xxs</item>
        <item name="android:layout_marginVertical">?attr/ttivi_spacing_m</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="ttiviTextSizeIdentifier">H5</item>
    </style>

    <style name="TtiviTabIconOnly">
        <item name="android:tint">@color/ttivi_tab_tint</item>
        <item name="android:layout_width">?attr/ttivi_icon_size_m</item>
        <item name="android:layout_height">?attr/ttivi_icon_size_m</item>
    </style>

</resources>
