<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TtiviPanelContainer">
        <item name="android:background">@drawable/ttivi_panel_background</item>
    </style>

    <style name="TtiviPanelContainer.Floating">
        <item name="android:elevation">?attr/ttivi_radius_shadow_elevation_normal</item>
    </style>

    <style name="TtiviPanelContainer.Floating.ProcessBarSubContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ttivi_panel_background_rounded_above</item>
    </style>

    <style name="TtiviPanelContainer.MainMenu">
        <item name="android:background">?attr/ttivi_color_main_menu_background</item>
    </style>

    <style name="TtiviPanelContainer.Floating.TaskPanelSubContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ttivi_panel_background</item>
    </style>

    <style name="TtiviPanelContainer.Floating.TaskPanelSubContainer.Sidebar">
        <item name="android:layout_width">?attr/ttivi_size_task_panel_sidebar_width</item>
    </style>

    <style name="TtiviPanelContainer.Floating.TaskPanelSubContainer.Maximized">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TtiviPanelContainer.TaskPanelSubContainerTaskProcessBarPanelContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ttivi_panel_background_separation_above</item>
    </style>

    <style name="TtiviPanelContainer.TaskPanelSubContainerTaskPanelsContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TtiviProcessBarContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">152dp</item>
        <item name="android:paddingHorizontal">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviNotificationPanelContainer">
        <item name="android:layout_width">?attr/ttivi_size_notification_panel_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">?attr/ttivi_notification_panel_padding_top</item>
        <item name="android:layout_marginBottom">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviPanelContainer.Floating.NotificationPanelSubContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ttivi_panel_background_rounded</item>
        <item name="android:layout_marginTop">?attr/ttivi_notification_panel_spacing</item>
    </style>

    <style name="TtiviNotification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- TODO(IVI-1790): Update notification layout with new UX specifications -->
        <item name="android:paddingTop">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviPanelContainer.Floating.DebugSubContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviDebugContainer">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="TtiviPanelContainer.Floating.Eta">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ttivi_panel_background_rounded</item>
        <item name="android:paddingLeft">?attr/ttivi_spacing_xs</item>
        <item name="android:paddingTop">?attr/ttivi_spacing_xs</item>
        <item name="android:paddingBottom">?attr/ttivi_spacing_xs</item>
        <item name="android:paddingRight">?attr/ttivi_spacing_xl</item>
        <item name="android:layout_marginRight">?attr/ttivi_spacing_xl</item>
        <item name="android:layout_marginTop">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviPanelContainer.Floating.Guidance">
        <item name="android:layout_width">?attr/ttivi_size_guidance_panel_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">?attr/ttivi_spacing_xl</item>
        <item name="android:layout_marginTop">?attr/ttivi_spacing_xl</item>
        <item name="android:background">@drawable/ttivi_panel_background_rounded</item>
    </style>

    <style name="TtiviPanelContainer.ControlCenter">
        <item name="android:background">?attr/ttivi_color_system_ui_background</item>
    </style>
</resources>
