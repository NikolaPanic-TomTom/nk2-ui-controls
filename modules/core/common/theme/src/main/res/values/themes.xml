<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theming should be realized by using the attributes and styles, this theme should only be
    used if the preferred way is not possible. -->
    <style name="TtiviApplicationTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Due to Android's shadow implementation, these shadow alpha and light properties must be
             set on the app's overall theme rather than the context of the view host. -->
        <item name="android:ambientShadowAlpha">0</item>
        <item name="android:spotShadowAlpha">1</item>
        <!-- An extremely large light source makes the shadows look consistent across different
             view positions. -->
        <item name="*android:lightRadius">10000dp</item>
        <!-- A negative value here causes the shadows to be lower than the view itself. Like the
             elevation itself, this value has to be scaled proportionally to the radius value. -->
        <item name="*android:lightY">-4000dp</item>

        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">?attr/ttivi_color_shadow_normal</item>

        <!-- For debug purposes only - we use the standard button in the debug panel and don't want
             them to have a large shadow. -->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
</resources>
