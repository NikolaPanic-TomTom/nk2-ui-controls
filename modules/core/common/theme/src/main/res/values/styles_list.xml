<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Common top-level style for IVI list styles. It should not inherit from anything
    such as one of Android's default theme styles otherwise the UI will not look exactly
    the same on different versions of Android and updating can change the UI. -->
    <style name="TtiviList">
        <item name="android:background">@null</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdgeLength">?attr/ttivi_size_list_fading_edge_length</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TtiviList.NoScrolling">
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:nestedScrollingEnabled">false</item>
    </style>

    <style name="TtiviListItem"></style>

    <style name="TtiviListItem.Header"></style>

    <style name="TtiviListItem.Header.Text">
        <item name="android:textColor">?attr/ttivi_color_text_secondary</item>
    </style>

    <style name="TtiviListItem.Header.Icon">
        <item name="android:tint">?attr/ttivi_color_text_secondary</item>
    </style>

</resources>
