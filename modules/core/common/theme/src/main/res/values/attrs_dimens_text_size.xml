<resources>
    <declare-styleable name="TtiviThemeCategoryDimensTextSize">
        <!-- Text sizes are specified in dips instead of sp because the UI should look precisely
        as specified by the UX visual design which takes into account alignment of text with
        non-text items. This means that text size should not be changable by the user. 1dip = 1sp is
         used. -->
        <attr name="ttivi_text_size_h1" format="dimension" />
        <attr name="ttivi_text_size_h2" format="dimension" />
        <attr name="ttivi_text_size_h3" format="dimension" />
        <attr name="ttivi_text_size_h4" format="dimension" />
        <attr name="ttivi_text_size_h5" format="dimension" />
        <attr name="ttivi_text_size_b1" format="dimension" />
        <attr name="ttivi_text_size_b2" format="dimension" />

        <attr name="ttivi_default_button_text_size" format="dimension" />
    </declare-styleable>
</resources>
