<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Common top-level style for IVI views. It should not inherit from anything
    such as one of Android's default theme styles otherwise the UI will not look exactly
    the same on different versions of Android and updating can change the UI. -->
    <style name="TtiviScrollView">
        <item name="android:background">@null</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdgeLength">?attr/ttivi_size_list_fading_edge_length</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TtiviInformationControl"></style>

    <!-- Padding templates, https://zpl.io/aB0YwNA  -->
    <style name="TtiviInformationControl.Padding"></style>

    <style name="TtiviInformationControl.Padding.1">
        <item name="android:paddingVertical">?attr/ttivi_spacing_m</item>
        <item name="android:paddingHorizontal">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviInformationControl.Padding.2">
        <item name="android:paddingVertical">?attr/ttivi_spacing_xs</item>
        <item name="android:paddingHorizontal">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviInformationControl.Padding.3" tools:ignore="UnusedResource">
        <item name="android:paddingVertical">?attr/ttivi_spacing_xxs</item>
        <item name="android:paddingHorizontal">?attr/ttivi_spacing_xl</item>
    </style>

    <style name="TtiviInformationControl.Padding.4">
        <item name="android:paddingVertical">?attr/ttivi_spacing_xxs</item>
        <item name="android:paddingHorizontal">?attr/ttivi_spacing_s</item>
    </style>

    <style name="TtiviInformationControl.Padding.5" tools:ignore="UnusedResource">
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">?attr/ttivi_spacing_xl</item>
    </style>

    <!-- TODO(IVI-1796): These are text attributes that cannot be set via                 -->
    <!--     ttiviInformationControlTextAppearance. Verify if this style is still needed. -->
    <style name="TtiviInformationControl.Text3">
        <item name="android:maxLines">?attr/ttivi_size_list_item_text_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <!-- TODO(IVI-1791): set lineSpacingExtra as part of ttiviTextSizeIdentifier. -->
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_h5</item>
    </style>

    <style name="TtiviInformationControl.AdditionalText">
        <item name="android:textColor">?attr/ttivi_color_text_secondary</item>
    </style>

    <!-- Breadcrumbs Bar view, see https://zpl.io/boQR0BM.   -->
    <style name="TtiviBreadcrumbsBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?attr/ttivi_size_task_panel_top_bar_height</item>
    </style>

    <style name="TtiviBreadcrumbsBarRootLabel">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/ttivi_color_text_primary</item>
        <item name="ttiviTextSizeIdentifier">H2</item>
        <item name="ttiviTextWeight">bold</item>
    </style>

    <style name="TtiviBreadcrumbsBarItem">
        <item name="android:textColor">?attr/ttivi_color_text_secondary</item>
        <item name="android:singleLine">true</item>
        <item name="ttiviTextSizeIdentifier">H5</item>
        <item name="ttiviTextWeight">medium</item>
    </style>

    <style name="TtiviBreadcrumbsBarLastItem">
        <item name="android:textColor">?attr/ttivi_color_text_primary</item>
        <item name="android:singleLine">true</item>
        <item name="ttiviTextSizeIdentifier">H5</item>
        <item name="ttiviTextWeight">bold</item>
    </style>
</resources>
