    <style name="TtiviText.TextAppearance.B2">
        <item name="android:textSize">?attr/ttivi_text_size_b2</item>
        <item name="android:letterSpacing">?attr/ttivi_text_letter_spacing_to_text_size_ratio_b2</item>
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_b2</item>
    </style>

    <!-- Notification panel styles -->
    <!-- Defined here manually because they are different from the global styles. -->
    <style name="TtiviText.TextAppearance.H3.NotificationHeaderTitle">
