        <item name="android:letterSpacing">?attr/ttivi_text_letter_spacing_to_text_size_ratio_h5</item>
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_h5</item>
    </style>

    <style name="TtiviText.TextAppearance.B1">
        <item name="android:textSize">?attr/ttivi_text_size_b1</item>
        <item name="android:letterSpacing">?attr/ttivi_text_letter_spacing_to_text_size_ratio_b1</item>
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_b1</item>
