<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Common top-level style for IVI text styles. It should not inherit from anything
    such as one of Android's default theme styles otherwise the UI will not look exactly
    the same on different versions of Android and updating can change the UI.
    We also need to explicitly clear the color attributes, because they are normally set
    by the Android framework even on a parentless style. -->
    <style name="TtiviText" >
        <item name="android:textColor">@null</item>
        <item name="android:textColorHint">@null</item>
        <item name="android:textColorHighlight">@null</item>
        <item name="android:textColorLink">@null</item>
    </style>

    <style name="TtiviText.TextAppearance" />

    <style name="TtiviText.TextAppearance.H1">
        <item name="android:textSize">?attr/ttivi_text_size_h1</item>
        <item name="android:letterSpacing">?attr/ttivi_text_letter_spacing_to_text_size_ratio_h1</item>
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_h1</item>
    </style>

    <style name="TtiviText.TextAppearance.H2">
        <item name="android:textSize">?attr/ttivi_text_size_h2</item>
        <item name="android:letterSpacing">?attr/ttivi_text_letter_spacing_to_text_size_ratio_h2</item>
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_h2</item>
    </style>

    <style name="TtiviText.TextAppearance.H3">
        <item name="android:textSize">?attr/ttivi_text_size_h3</item>
        <item name="android:letterSpacing">?attr/ttivi_text_letter_spacing_to_text_size_ratio_h3</item>
        <item name="android:lineSpacingExtra">?attr/ttivi_text_line_spacing_extra_h3</item>
    </style>

    <style name="TtiviText.TextAppearance.H4">
        <item name="android:textSize">?attr/ttivi_text_size_h4</item>
