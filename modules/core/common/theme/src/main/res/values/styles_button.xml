<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TtiviButton">
        <item name="android:background">@drawable/ttivi_button_default_background</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingVertical">?attr/ttivi_default_button_padding_vertical</item>
        <item name="android:height">?attr/ttivi_size_default_button_height</item>
        <item name="android:layout_height">?attr/ttivi_size_default_button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxHeight">?attr/ttivi_size_default_button_height</item>
        <item name="android:textColor">@color/ttivi_button_text</item>
        <item name="android:textSize">?attr/ttivi_default_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">?attr/ttivi_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:drawablePadding">?attr/ttivi_spacing_xs</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:ellipsize">none</item>
        <item name="android:fadingEdgeLength">?attr/ttivi_size_default_button_fading_edge_length</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
