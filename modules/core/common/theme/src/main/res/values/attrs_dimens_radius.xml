<resources>
    <declare-styleable name="TtiviThemeCategoryDimensRadius">
        <attr name="ttivi_radius_xs" format="dimension" />
        <attr name="ttivi_radius_s" format="dimension" />
        <attr name="ttivi_radius_m" format="dimension" />
        <attr name="ttivi_radius_l" format="dimension" />

        <!-- The elevation determines the final radius of shadow. This value does not directly
             represent the shadow size however, as it is impacted by the radius of the elevation
             shadow's light source, which is a very large value to ensure shadows are positioned
             entirely underneath the elevated view. Specifying 1dp here leads to roughly 15dp of
             rendered shadow. -->
        <attr name="ttivi_radius_shadow_elevation_normal" format="dimension" />
        <attr name="ttivi_radius_shadow_elevation_high" format="dimension" />

        <attr name="ttivi_mainmenu_item_radius" format="dimension" />

        <attr name="ttivi_default_button_radius" format="dimension" />

        <attr name="ttivi_media_art_radius" format="dimension" />

        <attr name="ttivi_information_control_rounded_image_corner_radius" format="dimension" />
        <attr name="ttivi_notification_panel_rounded_image_corner_radius" format="dimension" />
        <attr name="ttivi_contact_details_rounded_image_corner_radius" format="dimension" />
        <attr name="ttivi_process_bar_call_rounded_image_corner_radius" format="dimension" />
        <attr name="ttivi_process_bar_miniplayer_rounded_image_corner_radius" format="dimension" />

        <attr name="ttivi_panel_border_radius" format="dimension" />
        <attr name="ttivi_debug_panel_border_radius_internal" format="dimension" />
    </declare-styleable>
</resources>
