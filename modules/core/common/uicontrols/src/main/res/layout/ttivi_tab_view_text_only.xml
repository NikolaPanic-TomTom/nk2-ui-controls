<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.tomtom.nk2.core.common.uicontrols.view.TtiviTabViewModel" />

        <import type="com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView.TextWeight" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/ttivi_size_tab_text_only_height"
        android:orientation="vertical">

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView
            android:id="@+id/ttiviTabText"
            style="@style/TtiviTabTextOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.text}"
            auto:selected="@{viewModel.isSelected}"
            auto:ttiviTextWeight="@{viewModel.isSelected ? TextWeight.BOLD : TextWeight.MEDIUM}" />

    </LinearLayout>
</layout>
