<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.tomtom.nk2.core.common.uicontrols.view.TtiviTabBarViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="?attr/ttivi_size_tab_bar_line_height"
            android:layout_gravity="bottom"
            android:background="?attr/ttivi_color_tab_bar_line"/>

        <LinearLayout
            android:id="@+id/ttiviTabContainer"
            android:paddingHorizontal="?attr/ttivi_size_tab_bar_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" />

        <View
            android:id="@+id/ttiviTabIndicator"
            android:layout_width="0dp"
            android:layout_height="?attr/ttivi_size_tab_bar_indicator_height"
            android:layout_gravity="bottom"
            android:background="?attr/ttivi_color_tab_bar_indicator" />

    </FrameLayout>
</layout>
