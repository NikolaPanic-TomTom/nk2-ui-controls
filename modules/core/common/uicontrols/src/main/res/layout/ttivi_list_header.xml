<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.tomtom.nk2.core.common.uicontrols.list.TtiviListItemHeaderViewModel" />
    </data>

    <LinearLayout
        style="@style/TtiviListItem.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/ttivi_spacing_l"
        android:layout_marginHorizontal="?attr/ttivi_spacing_xl"
        android:minHeight="?attr/ttivi_size_list_header_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            style="@style/TtiviListItem.Header.Icon"
            android:layout_width="?attr/ttivi_list_header_icon_width"
            android:layout_height="?attr/ttivi_list_header_icon_height"
            android:layout_marginEnd="?attr/ttivi_spacing_xs"
            android:src="@{viewModel.headerIcon}"
            auto:visibleIfNotNull="@{viewModel.headerIcon}"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible" />

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView
            android:id="@+id/ttiviTextView"
            style="@style/TtiviListItem.Header.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.headerText}"
            auto:ttiviTextSizeIdentifier="H4"
            auto:ttiviTextWeight="medium"
            auto:visibleIfNotNull="@{viewModel.headerText}"
            tools:text="headerText" />
    </LinearLayout>
</layout>
