<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tomtom.nk2.core.common.uicontrols.view.breadcrumbsbar.TtiviBreadcrumbsBarItemViewModel" />

        <variable
            name="isFirstItem"
            type="Boolean" />

        <variable
            name="isLastItem"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="@{() -> viewModel.onClick.invoke()}"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ttivi_breadcrumbs_bar_root_icon"
            android:layout_width="?attr/ttivi_breadcrumbs_bar_root_icon_size_small"
            android:layout_height="?attr/ttivi_breadcrumbs_bar_root_icon_size_small"
            android:layout_marginEnd="?attr/ttivi_spacing_xs"
            android:src="@{viewModel.icon}"
            auto:visibleIf="@{isFirstItem &amp;&amp; viewModel.icon != null}" />

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView
            style="@style/TtiviBreadcrumbsBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.label}"
            auto:visibleIfNot="@{isLastItem}" />

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView
            style="@style/TtiviBreadcrumbsBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="?attr/ttivi_spacing_l"
            android:text="@string/ttivi_breadcrumbs_bar_item_separator"
            auto:visibleIfNot="@{isLastItem}" />

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView
            style="@style/TtiviBreadcrumbsBarLastItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.label}"
            auto:visibleIf="@{isLastItem}" />
    </LinearLayout>
</layout>
