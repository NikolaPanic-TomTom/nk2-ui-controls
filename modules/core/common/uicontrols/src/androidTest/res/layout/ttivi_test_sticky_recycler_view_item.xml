<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/ttivi_test_grid_width"
    android:background="@drawable/ttivi_test_item_background">

    <com.tomtom.nk2.core.common.uicontrols.view.TtiviTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ttivi_test_sticky_item_height"
        android:layout_marginVertical="?attr/ttivi_spacing_s"
        android:gravity="right"
        android:maxLines="1"
        android:text="Content"
        auto:layout_constraintBottom_toBottomOf="parent"
        auto:layout_constraintEnd_toEndOf="parent"
        auto:layout_constraintStart_toStartOf="parent"
        auto:layout_constraintTop_toTopOf="parent"
        auto:ttiviTextSizeIdentifier="H4"
        auto:ttiviTextWeight="medium" />

</androidx.constraintlayout.widget.ConstraintLayout>
