<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTabBar
            android:id="@+id/ttivi_test_tab_bar_text_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:ttiviTabType="text_only" />

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTabBar
            android:id="@+id/ttivi_test_tab_bar_icon_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:ttiviTabType="icon_only" />

        <com.tomtom.nk2.core.common.uicontrols.view.TtiviTabBar
            android:id="@+id/ttivi_test_tab_bar_text_and_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:ttiviTabType="text_and_icon" />

    </LinearLayout>

</layout>
